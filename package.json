{
  "name": "effepi",
  "version": "0.3.0",
  "description": "Fun functional programming with pipelinable functions",
  "main": "dist/index.js",
  "engines": {
    "node": "10.x"
  },
  "scripts": {
    "changelog": "standard-changelog",
    "lint": "eslint -c ./.eslintrc.json src/**/*.ts --fix",
    "prepublishOnly": "tsc -p .",
    "size-limit": "tsc -p . && size-limit",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OctoD/effepi.git"
  },
  "keywords": [
    "functional programming",
    "pipeline",
    "pipe",
    "typescript",
    "function library",
    "library"
  ],
  "author": {
    "name": "Paolo Roth",
    "email": "iamoctod@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/OctoD/effepi/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "size-limit": [
    {
      "limit": "1 s",
      "webpack": false,
      "path": "dist/*.js"
    }
  ],
  "homepage": "https://github.com/OctoD/effepi#readme",
  "devDependencies": {
    "@types/jest": "^24.0.16",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "codecov": "^3.5.0",
    "eslint": "^5.16.0",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.7",
    "prettier": "^1.17.1",
    "size-limit": "^1.3.8",
    "standard-changelog": "^2.0.11",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.1"
  }
}
